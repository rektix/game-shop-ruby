<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @game.price %>
</p>

<p>
  <strong>Studio:</strong>
  <%= @game.studio.name %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @game.genre.name %>
</p>

<p>
  <strong>Comments:</strong>
</p>
<hr>
<% @game.comments.each do |comment| %> 
  <%= render comment %>
  <hr>
<% end %>

<% if user_signed_in? %>
<%= link_to 'Add comment', new_comment_path(game_id: @game.id) %> |
<%= link_to 'Buy game', new_order_path(game_id: @game.id) %> |
<% end %>
<% if user_signed_in? and is_admin(current_user) %>
<%= link_to 'Edit', edit_game_path(@game) %> |
<% end %>
<%= link_to 'Back', games_path %>
