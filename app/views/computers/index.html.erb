<p id="notice"><%= notice %></p>

<h1>Computers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cpu</th>
      <th>Gpu</th>
      <th>Ram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @computers.each do |computer| %>
      <tr>
        <td><%= computer.user_id %></td>
        <td><%= computer.cpu.name %> <%= computer.cpu.cores %> cores</td>
        <td><%= computer.gpu.name %> <%= computer.gpu.ram %>GB</td>
        <td><%= computer.ram %>GB</td>
        <td><%= link_to 'Show', computer %></td>
        <% if user_signed_in? and is_admin(current_user) %>
          <td><%= link_to 'Edit', edit_computer_path(computer) %></td>
          <td><%= link_to 'Destroy', computer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Computer', new_computer_path %>
